<div class="contact_wrapper">
    <div class="header_container"><%- include('menu.ejs') %></div>
    <div class="contact_header">
        <div class="header_text text-white text-center">
            <h1 class="text-capitalize fw-bold">contact us</h1>
            <hr class="header_hr" />
        </div>

        <div class="header_text_icons">
            <span><i class="fa-solid fa-truck-fast"></i></span>
            <span><i class="fa-solid fa-ship"></i></span>
            <span><i class="fa-solid fa-plane-departure"></i></span>
            <span><i class="fa-solid fa-box-open"></i></span>
            <span><i class="fa-solid fa-globe"></i></span>
        </div>
    </div>

    <div class="form_wrapp">
        <div class="conatact_form_wrapper container">
            <!-- roland -->
            <div class="row">
                <div class="col-md-6 contacts_info">
                    <h1>Crossborder Logistics Inc</h1>
                    <!-- <h4 style="color: orange;">BaÄŸlar, Mimar Sinan Cd No:46, 34209 BaÄŸcÄ±lar/Ä°stanbul, TÃ¼rkiye ðŸ‡¹ðŸ‡·</h4> -->
                    <span><b>Enquiries:</b> enquiry@crossborderlogisticsinc.com</span>
                </div>
                <div class="col-md-6 contact_detail">
                    <form action="/submitMessage" method="post" class="row g-3" id="message_form">
                        <% if (typeof msg !=='undefined' ) { %>
                            <% if (msg == ''){ %>
                                <div class="alert alert-danger animate__animated animate__shakeX text-center fs-3 d-none"
                                    role="alert"></div>
                                <% } else { %>
                                    <div class="alert alert-danger animate__animated animate__shakeX text-center fs-3"
                                        role="alert">
                                        <%= msg %>
                                    </div>
                                    <% } %>
                        <% } else if (typeof error !== 'undefined') { %>
                                <% if (error == ''){ %>
                                    <div class="alert alert-danger animate__animated animate__shakeX text-center fs-3 d-none"
                                        role="alert"></div>

                                    <%} else { %>
                                                <div class="alert alert-danger animate__animated animate__shakeX text-center fs-3"
                                                role="alert">
                                                <%= error %>
                                            </div>
                                            <% } %>
                                            <% } %>
                                                <div class="alert alert-danger animate__animated animate__shakeX text-center d-none"
                                                    role="alert"></div>

                                                <div class="col-md-6">
                                                    <label for="contactName" class="form-label">Contact Name:</label>
                                                    <input type="text" class="form-control" id="contactName"
                                                        name="contactName" required />
                                                </div>
                                                <div class="col-md-6">
                                                    <label for="phoneNumber" class="form-label">Phone Number:</label>
                                                    <input type="text" class="form-control" id="phoneNumber"
                                                        name="phoneNumber" required />
                                                </div>
                                                <div class="col-12">
                                                    <label for="email" class="form-label">Email:</label>
                                                    <input type="email" class="form-control" id="email" name="email"
                                                        required />
                                                </div>
                                                <div class="col-12 mb-3">
                                                    <label for="message" class="form-label">Message:</label>
                                                    <textarea class="form-control" id="message" rows="3" name="message"
                                                        required></textarea>
                                                </div>

                                                <div class="col-12">
                                                    <button type="submit" class="btn btn-primary submit_btn w-25">
                                                        Send
                                                    </button>
                                                </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="row p-5">
            <div class="col-md-4 d-flex align-items-center px-5">
                <img src="/images/log2.png" alt="logo" width="250px" height="auto" />
            </div>
            <div class="col-md-4 footer_middle">
                <div class="contact_footer text-white">
                    <h1 class="text-uppercase">Contact Us</h1>
                    <h4 class="text-capitalize">
                        Have a question? We'd love to hear from you.
                    </h4>
                    <span><i class="fa-solid fa-address-book pe-"></i> BaÄŸlar, Mimar Sinan Cd
                        No:46, 34209 BaÄŸcÄ±lar/Ä°stanbul, TÃ¼rkiye ðŸ‡¹ðŸ‡·</span>
                    <span><i class="fa-solid fa-envelope pe-1"></i>
                        info@crossborderlogisticsinc.com
                    </span>
                </div>
            </div>
            <div class="col-md-4 d-flex justify-content-center footer_last">
                <div class="contact_footer text-white">
                    <h1 class="text-uppercase">Services</h1>
                    <span><i class="fa-solid fa-ship pe-1"></i> Ocean Freight Services</span>
                    <span><i class="fa-solid fa-plane-departure pe-1"></i> Air Freight &
                        Courier Services</span>
                    <span><i class="fa-solid fa-truck-fast pe-1"></i> Road Freight
                        Services</span>
                </div>
            </div>
        </div>
    </div>
    <div class="copyright text-white text-center">
        <p>
            All rights reserved. copyright &copy; 1999. Cross Border Logistics Inc
        </p>
    </div>
</div>

