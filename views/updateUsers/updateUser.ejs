<div class="container-fluid">
    <div class="row">
        <div class="sidebar border border-right col-md-3 col-lg-2 p-0 bg-body-tertiary">
            <div class="offcanvas-md offcanvas-end bg-body-tertiary" tabindex="-1" id="sidebarMenu"
                aria-labelledby="sidebarMenuLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="sidebarMenuLabel">BorderCross Logistics</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#sidebarMenu"
                        aria-label="Close"></button>
                </div>
                <div class="offcanvas-body d-md-flex flex-column p-0 pt-lg-3 overflow-y-auto">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2 active" aria-current="page"
                                href="/packages/dashboard">
                                <i class="fa-solid fa-house-chimney-window"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" href="/packages/users">
                                <i class="fa-solid fa-users"></i>
                                Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" href="/packages/add">
                                <i class="fa-solid fa-user-plus"></i>
                                Add Package
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" href="/packages/allpackage">
                                <i class="fa-solid fa-user"></i>
                                All Package
                            </a>
                        </li>

                    </ul>

                    <hr class="my-3">

                    <ul class="nav flex-column mb-auto">

                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" href="/logout">
                              <i class="fa-solid fa-right-from-bracket"></i>
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mb-5">
            <div
                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Update User Info</h1>
            </div>

            <form action="/packages/update-user/<%= userInfo.trackingNumber %>" method="POST">
                <div class="row g-3">
                    <h4 class="bg-primary rounded-4 p-3 text-white">Sender Details</h4>
                    <div class="col-md-3">
                        <label for="senderFirstName" class="form-label fw-bold">First Name</label>
                        <input type="text" class="form-control" id="senderFirstName"
                            name="senderDetails[firstName]" value="<%= userInfo.senderDetails.firstName || '' %>">
                    </div>

                   
                    <div class="col-md-3">
                        <label for="senderLastName" class="form-label fw-bold">Last Name</label>
                        <input type="text" class="form-control" id="senderLastName" name="senderDetails[lastName]" value="<%= userInfo.senderDetails.lastName || '' %>">
                    </div>

                    <div class="col-md-6">
                        <label for="senderEmail" class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" id="senderEmail" name="senderDetails[email]" value="<%= userInfo.senderDetails.email || '' %>">
                    </div>

                    <div class="col-md-3">
                        <label for="senderPhoneNumber" class="form-label fw-bold">Phone Number</label>
                        <input type="text" class="form-control" id="senderPhoneNumber"
                            name="senderDetails[phoneNumber]" value="<%= userInfo.senderDetails.phoneNumber || '' %>">
                    </div>

                    <div class="col-md-6">
                        <label for="senderAddress" class="form-label fw-bold">Address</label>
                        <input type="text" class="form-control" id="senderAddress"
                            name="senderDetails[address]" value="<%= userInfo.senderDetails.address || '' %>">
                    </div>

                    <div class="col-md-3">
                        <label for="senderCountry" class="form-label fw-bold">Country</label>
                        <input type="text" class="form-control" id="senderCountry" name="senderDetails[country]" value="<%= userInfo.senderDetails.country || '' %>">
                    </div>
                    

                    <!-- //////////////////////////////// -->
                    <h4 class="bg-primary rounded-4 p-3 mt-4 text-white">Receiver Details</h4>
                    <div class="col-md-3">
                        <label for="receiverFirstName" class="form-label fw-bold">First Name</label>
                        <input type="text" class="form-control" id="receiverFirstName"
                            name="receiverDetails[firstName]" value="<%= userInfo.receiverDetails.firstName || '' %>">
                    </div>

                    <div class="col-md-3">
                        <label for="receiverLastName" class="form-label fw-bold">Last Name</label>
                        <input type="text" class="form-control" id="receiverLastName" name="receiverDetails[lastName]" value="<%= userInfo.receiverDetails.lastName || '' %>">
                    </div>

                    <div class="col-md-6">
                        <label for="receiverEmail" class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" id="receiverEmail" name="receiverDetails[email]" value="<%= userInfo.receiverDetails.email || '' %>">
                    </div>

                    <div class="col-md-3">
                        <label for="receiverPhoneNumber" class="form-label fw-bold">Phone Number</label>
                        <input type="text" class="form-control" id="receiverPhoneNumber"
                            name="receiverDetails[phoneNumber]" value="<%= userInfo.receiverDetails.phoneNumber || '' %>">
                    </div>

                    <div class="col-md-6">
                        <label for="receiverDestinationAddress" class="form-label fw-bold">Destination Address</label>
                        <input type="text" class="form-control" id="receiverDestinationAddress"
                            name="receiverDetails[destinationAddress]" value="<%= userInfo.receiverDetails.destinationAddress || '' %>">
                    </div>

                    <div class="col-md-3">
                        <label for="receiverCountry" class="form-label fw-bold">Country</label>
                        <input type="text" class="form-control" id="receiverCountry" name="receiverDetails[country]" value="<%= userInfo.receiverDetails.country || '' %>">
                    </div>

                    <div class="col-md-6">
                        <label for="productName" class="form-label fw-bold">Product Name</label>
                        <input type="text" class="form-control" id="productName" name="receiverDetails[productName]" value="<%= userInfo.receiverDetails.productName || '' %>">
                    </div>

                    <div class="col-md-6">
                        <label for="expectedDeliveryDate" class="form-label fw-bold">Expected Delivery Date</label>
                        <input type="date" class="form-control" id="expectedDeliveryDate"
                            name="receiverDetails[expectedDeliveryDate]" value="<%= userInfo.receiverDetails.expectedDeliveryDate ? userInfo.receiverDetails.expectedDeliveryDate.toISOString().split('T')[0] : 'YYYY-MM-DD' %>">
                    </div>
                    

                    <div class="col-md-6">
                        <label for="productDetails" class="form-label fw-bold">Product Details</label>
                        <textarea class="form-control" id="productDetails" name="receiverDetails[productDetails]" 
                            rows="3"><%= userInfo.receiverDetails.productDetails || ' ' %></textarea>
                    </div>

                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">Update User Info</button>
                    </div>
                </div>
            </form>


        </main>
    </div>
</div>